{
  "source": [
    "tokens/**/*.json"
  ],
  "platforms": {
    "scss": {
      "transformGroup": "scss",
      "buildPath": "/tokens/",
      "files": [
        {
          "destination": "_variables.scss",
          "format": "css/variables",
          "filter": {
            "attributes": {
              "category": "color"
            }
          }
        },
        {
          "destination": "_font-variables.scss",
          "format": "css/variables",
          "filter": {
            "attributes": {
              "category": "paragraph"
            }
          }
        },
        {
          "destination": "_icon-variables.scss",
          "format": "css/variables",
          "filter": {
            "attributes": {
              "category": "icons"
            }
          }
        }
      ]
    }
  }
}